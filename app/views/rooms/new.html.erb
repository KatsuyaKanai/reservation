<div class="notifications"></div>
<div class="container-fiuld room-new">
    <div class="row">
        <div class="col-lg-2 room-nav room-nav-pc d-lg-block d-none">
            <ul class="active">
                <%=link_to "基本情報" ,new_room_path %>
            </ul>
        </div>
        <div class="col-lg-2 room-nav room-nav-mobile d-lg-none">
            <ul>
                <%=link_to "基本情報" ,new_room_path %>
            </ul>
        </div>
        <div class="col-lg-10 room-view">
            <div class="room-view-box">
                <%= form_with do |room| %>
                
                    <div class="update-content">
                        <div class="row">
                            <h5>ルーム情報登録<h5>
                        </div>
                    </div>
                    <div class="update-content">
                        <div class="row">
                            <label class="col-md-3 required-a" for="name">
                            ルーム名
                            </label>
                            <input class="form-control mb-4 col-md-9" placeholder="ルーム名を入力" type="text" name="room[name]" id="room_name">
                        </div>
                    </div>
                    <div class="update-content">
                        <div class="row">
                            <label class="col-md-3 required-a" for="content">
                            ルーム紹介
                            </label>
                            <textarea rows="5" class="form-control mb-4 col-md-9" placeholder="ルーム説明を入力" name="room[content]" id="room_content"></textarea>
                        </div>
                    </div>
                    <div class="update-content">
                        <div class="row">
                            <label class="col-md-3 required-a" for="price">
                            料金
                            </label>
                            <input class="form-control mb-4 col-md-9" placeholder="一日あたりの料金を入力" type="number" name="room[price]" id="room_price">
                        </div>
                    </div>
                    <div class="update-content">
                        <div class="row">
                            <label class="col-md-3 required-a" for="address">
                            住所
                            </label>
                            <input class="form-control mb-4 col-md-9" placeholder="住所を入力" type="text" name="room[address]" id="room_address">
                        </div>
                    </div>
                    <div class="update-content">
                        <div class="row">
                            <label class="col-md-3 required-a" for="image">
                            ルーム画像
                            </label>
                            <input class="mb-4 col-md-9" placeholder="ルーム画像をアップロード" type="file" name="room[image]" id="room_image">
                        </div>
                    </div>
                    <div class="update-content">
                        <div class="row">
                            <input type="submit" name="commit" value="登録" class="col-md-2 btn-primary mx-3" data-disable-with="登録">
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div> 

